<%%= title(t('<%= plural_table_name %>.show.title')) %>

<% for attribute in attributes -%>
<p>
  <b><%%= t('activerecord.attributes.<%= singular_table_name %>.<%= attribute.name %>') %>:</b>
  <%%= @<%= singular_table_name %>.<%= attribute.name %> %>
</p>

<% end -%>


<%%= link_to(t('backend.actions.edit'), edit_<%= singular_table_name %>_path(@<%= singular_table_name %>))  if can?(:edit, @<%= singular_table_name %>) %>
<%%= link_to(t('backend.actions.destroy'), @<%= singular_table_name %>, :confirm => t('backend.actions.are_you_sure'), :method => :delete) if can?(:destroy, @<%= singular_table_name %>) %>