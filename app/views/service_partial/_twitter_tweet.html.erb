<a href="https://twitter.com/share" class="twitter-share-button" data-url="<%= target_url %>" data-via="clowerfield" data-lang="<%= I18n.locale %>"><%= t("social_tools.twitter_tweet") %></a>
<script>
    !function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (!d.getElementById(id)) {
            js = d.createElement(s);
            js.id = id;
            js.src = "//platform.twitter.com/widgets.js";
            fjs.parentNode.insertBefore(js, fjs);
        }
    }(document, "script", "twitter-wjs");
</script>