<h2><span>Музей</span></h2>

<div class="advert-slider">
  <ul id="museum-slider">
    <% @welcome_exhibits.each do |exhibit| %>
        <li>
          <%= link_to image_tag(exhibit.image.url(:slider)), exhibit %>
        </li>
    <% end %>
  </ul>
</div>
<!--<a class="nav prev" href="#">Назад</a>-->
