<% content_for(:head) do %>
    <%= javascript_include_tag 'jquery.fancybox-1.3.4.pack', 'jquery.mousewheel-3.0.4.pack' %>
    <%= stylesheet_link_tag 'jquery.fancybox-1.3.4' %>
<% end %>


<%#= @album.category_id %>
<%#= @album.article_id %>
<%#= @album.user_id %>

<div class="body">
  <ul class="second-top-menu">
    <% @menu_categories.each do |category| %>
        <li class="<%= 'active' if category == @category %>">
          <%= link_to category.title, "/#{category.short_url}" %>
          <%= "/" if category != @menu_categories.last %>
        </li>
    <% end %>
  </ul>
  <div class="column-left">

    <%= link_to(t('backend.actions.edit'), edit_album_path(@album)) if can?(:edit, @album) %>
    <%= link_to(t('backend.actions.destroy'), @album, :confirm => t('backend.actions.are_you_sure'), :method => :delete) if can?(:destroy, @album) %>

    <h1><%= @album.title %></h1>

    <p>
      <%= image_tag @album.preview.url(:big) %>
    </p>

    <p>
      <%= @album.short_description %>
    </p>

    <ul class="albums-list">
      <% @album.album_images.each.each do |image| %>
          <li>
            <%= link_to image_tag(image.image.url(:list)), image.image.url(:full), :rel => 'album', :alt => @album.title %>
          </li>
      <% end %>
    </ul>

    <div class="clear fixed"></div>

    <%= render "layouts/fb_comments" %>

  </div>
  <div class="column-right">
    <div class="b-right-banner">
      <%= render "layouts/like_box" %>
    </div>
  </div>
  <div class="clear"></div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $("a[rel=album]").fancybox({
            'transitionIn'        : 'none',
            'transitionOut'        : 'none',
            'titlePosition'     : 'over'
        });
    });
</script>