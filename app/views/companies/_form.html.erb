<%= form_for(@company, :html => {:multipart => true}) do |f| %>
    <%= render 'shared/error_messages', :target => @company %>

    <div class="field">
      <% if @company.logo_file_name? %>
          <%= image_tag @company.logo.url(:list) %>
          <br/>
      <% end %>
      <%= f.label :logo %>
      <br/>
      <%= f.file_field :logo %>
    </div>

    <div class="field">
      <%= f.label :name %>
      <br/>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <br/>
      <%= f.text_field :description %>
    </div>
    <div class="field">
      <%= f.label :about %>
      <br/>
      <%= f.text_area :about %>
    </div>
    <div class="field">
      <%= f.label :short_url %>
      <br/>
      <%= f.text_field :short_url %>
    </div>
    <div class="field">
      <%= f.label :company_order %>
      <br/>
      <%= f.number_field :company_order %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

<script language="javascript">
    $(document).ready(function () {
        $("#company_about").markItUp(mySettings);
    })
</script>