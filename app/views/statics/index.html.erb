<%= title(t('statics.index.title')) %>

<table>
  <tr>
    <th><%= t('activerecord.attributes.static.title') %></th>
    <th><%= t('activerecord.attributes.static.content') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @statics.each do |static| %>
  <tr>
    <td><%= static.title %></td>
    <td><%= static.content %></td>
    <td><%= link_to(t('backend.actions.show'), static) if can?(:show, static) %></td>
    <td><%= link_to(t('backend.actions.edit'), edit_static_path(static))  if can?(:edit, static) %></td>
    <td><%= link_to(t('backend.actions.destroy'), static, :confirm => t('backend.actions.are_you_sure'), :method => :delete) if can?(:destroy, static) %></td>
  </tr>
<% end %>
</table>

<p><%= link_to(t('helpers.submit.create', :model => t('activerecord.models.static')), new_static_path) if can?(:create, @statics) %></p>
