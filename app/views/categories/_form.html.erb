<%= form_for(@category, :builder => StarsFormBuilder) do |f| %>
  <%= render 'shared/error_messages', :target => @category %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :short_url %><br />
    <%= f.text_field :short_url %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>